use sugarcane::chat::Chat

struct PlayerData {
  teams: arr,
}
struct Team {
  players: arr,
}

fn init() {
  sugarcane::info("initializing bedwars")

  teams = map {}
  teams.insert("red", Team {
    players: [],
  })
  teams.insert("green", Team {
    players: [],
  })
  teams.insert("aqua", Team {
    players: [],
  })
  teams.insert("yellow", Team {
    players: [],
  })
  sc = sugarcane::instance()
  sc.store(teams)
}

fn add_player_to_team(player, team) {
  line = Chat::new("Team: ")
  line.add(team).color(team)
  player.show_scoreboard()
  player.set_scoreboard_line(1, line)

  sc = sugarcane::instance()
  teams = sc.lock()
  teams[team].players.push(player)
  sc.unlock(teams)
}

fn find_smallest_team() {
  sc = sugarcane::instance()
  teams = sc.lock()
  smallest_size = 100
  smallest_team = ""
  keys = teams.keys()
  for i = 0, i < teams.len(), i++ {
    color = keys[i]
    if teams[color].players.len() < smallest_size {
      smallest_team = color
      smallest_size = teams[color].players.len()
    }
  }
  sc.unlock(teams)
  smallest_team
}

